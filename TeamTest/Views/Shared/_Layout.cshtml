@using Microsoft.AspNet.Identity;
@using TeamTest.Models.Extensions;
@using TeamTest.Models;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - eν-τάξει</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @if (User.Identity.GetUserRole() == "Teacher")
    {
        <nav class="navbar navbar-fixed-top bg-primary">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("eν-τάξει", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", style = "color:white" })
                    @Html.ActionLink("CreateCourse", "Create", "Courses", new { area = "" }, new { @class = "navbar-brand", style = "color:white" })
                    @Html.ActionLink("Courses", "Index", "Courses", new { area = "" }, new { @class = "navbar-brand", style = "color:white" })
                    @Html.ActionLink("Teachers", "Index", "Teachers", new { area = "" }, new { @class = "navbar-brand", style = "color:white" })
                </div>
                <div class="navbar-collapse collapse">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>
    }
    else if (User.Identity.GetUserRole() == "Student")
    {
        <nav class="navbar navbar-fixed-top bg-primary">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("eν-τάξει", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", style = "color:white" })
                    @Html.ActionLink("Join Courses", "Index", "Courses", new { area = "" }, new { @class = "navbar-brand", style = "color:white" })
                    @Html.ActionLink("View Teachers", "Index", "Teachers", new { area = "" }, new { @class = "navbar-brand", style = "color:white" })
                </div>
                <div class="navbar-collapse collapse">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>
    }
    else if (!User.Identity.IsAuthenticated)
    {
        <nav class="navbar navbar-fixed-top bg-primary">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("eν-τάξει", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", style = "color:white" })
                </div>
                <div class="navbar-collapse collapse">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>
    }
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - eν-τάξει</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

